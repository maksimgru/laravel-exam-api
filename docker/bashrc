alias phpstanml="./vendor/bin/phpstan analyse --memory-limit=2G"
alias phpstancrc="./vendor/bin/phpstan clear-result-cache"
alias rmcfcache="if test -f /var/www/app/.php-cs-fixer.cache; then rm /var/www/app/.php-cs-fixer.cache; fi"
alias cch="rmcfcache && ch"
alias ccf="rmcfcache && cf"
alias pc="ch && phpstancrc && phpstanml"
alias pf="cf && phpstancrc && phpstanml"
alias pu="./vendor/bin/phpunit"
alias pa="php artisan"
alias cu="composer update"
alias ci="composer install"
alias cf="composer cs:fix"
alias ch="composer cs:check"
alias phpstan="./vendor/bin/phpstan analyse"
alias cda="composer dump-autoload -o"
alias swg="php artisan l5-swagger:generate"
alias fresh="php artisan migrate:fresh && php artisan route:clear && php artisan config:clear && php artisan cache:clear && php artisan event:clear"
alias fresh-test="php artisan migrate:fresh--env=testing"
alias clear="php artisan route:clear && php artisan config:clear && php artisan cache:clear && php artisan event:clear"
alias ihm="composer ide-helper"
alias cl="truncate --size 0 /var/www/app/storage/logs/*.log && echo \"Finish to clear all *.log\""
